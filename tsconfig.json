{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src/",
    "incremental": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/models/*": ["lib/models/*"],
      "@/assets/*": ["lib/assets/*"],
      "@/types/*": ["lib/types/*"],
      "@/utils/*": ["lib/utils/*"],
      "@/store/*": ["lib/store/*"],
      "@/markdown/*": ["./markdown/*"],
      "@/config": ["config"],
      "@/server/*": ["server/*"],
      "@/styles/*": ["styles/*"],
    },
    "typeRoots": [ "./types.d.ts"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "utils/util.js"],
  "exclude": ["node_modules"]
}


